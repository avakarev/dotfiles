# --date = (relative|local|default|iso|rfc|short|raw) 

[user]
    name = USERNAME
    email = EMAIL
[github]
    user = LOGIN
[core]
    editor = vim
    excludesfile = ~/.gitignore-global
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[color "diff"]
    old = red
    new = green
[color "status"]
    added = green
    changed = red bold
    untracked = cyan
[color "branch"]
    current = blue reverse
    local = green
    remote = yellow
[alias]
    st = status -sbu
    stat = status
    ci = commit
    cm = commit -m
    uc = reset HEAD^ # undo last local commit
    br = branch
    bl = branch -av
    tl = tag -l
    ls = ls-files
    co = checkout
    df = diff
    dc = diff --cached
    dfs = diff --stat -r
    dfn = diff --name-status -r
    lg  = log -p
    lga = log --graph --decorate --pretty=oneline --abbrev-commit
    gl  = log --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    i = remote -v
    su = submodule update --init
    sp = submodule foreach git pull origin master
    who = shortlog -s --
    what = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
