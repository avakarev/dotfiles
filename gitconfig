# --date = (relative|local|default|iso|rfc|short|raw)

[user]
    name = Andrey Vakarev
    email = avakarev@gmail.com
[core]
    editor = vim -u NONE
    excludesfile = ~/.gitignore-global
[merge]
    tool = vimdiff
[push]
    default = current
[master]
    autosetuprebase = always
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[color "diff"]
    old = red
    new = green
[color "status"]
    added = green
    changed = red bold
    untracked = cyan
[color "branch"]
    current = blue reverse
    local = green
    remote = yellow
[alias]
    st = status -sbu
    stat = status
    ci = commit
    cm = commit -m
    ca = commit --amend -C HEAD
    uc = reset --soft HEAD^ # retains commit as staged
    br = branch
    bl = branch -av
    tl = tag -l
    ls = ls-files
    co = checkout
    df = diff
    dc = diff --cached
    dfs = diff --stat -r
    dfn = diff --name-status -r
    g = grep -ni
    lg  = log --stat --abbrev-commit --relative-date
    lgp = log -p
    lga = log --graph --decorate --pretty=oneline --abbrev-commit
    gl  = log --color=always --all --graph --topo-order --pretty=\"format: %Cgreen%h%Creset %s%Cred%d%Creset%n\"
    lm = log --color=always --pretty=format:\"%Cgreen%h%Creset - %Cred%an%Creset, %ar: %C(yellow)%s%Creset\" --stat
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    i = remote -v
    su = submodule update --init
    sp = submodule foreach git pull origin master
    who = shortlog -s --
    what = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    me = log --author=avakarev
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
