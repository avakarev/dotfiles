# --date = (relative|local|default|iso|rfc|short|raw)

[user]
    name = Andrey Vakarev
    email = avakarev@gmail.com
[core]
    editor = vim -u NONE
    excludesfile = ~/.gitignore-global
[merge]
    tool = vimdiff
[push]
    default = current
[master]
    autosetuprebase = always
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[color "diff"]
    old = red
    new = green
[color "status"]
    added = green
    changed = red bold
    untracked = cyan
[color "branch"]
    current = blue reverse
    local = green
    remote = yellow
[alias]
    st = status -sbu
    stat = status
    ci = commit
    cm = commit -m
    ca = commit --amend -C HEAD
    uc = reset --soft HEAD^ # retains commit as staged
    br = branch
    bl = branch --all --verbose --verbose
    tl = tag -l
    co = checkout
    dw = diff --word-diff --color-words
    df = diff
    dc = diff --cached
    ds = diff --staged
    dst = diff --stat -r
    dff = diff --name-status -r
    dm = diff master
    dmf = diff master --name-status -r
    dms = diff master --stat -r
    g = grep --line-number --ignore-case
    lp = log --patch
    ln = log --name-status
    ls = log --stat --relative-date
    lga = log --graph --decorate --pretty=oneline --abbrev-commit
    gl  = log --color=always --all --graph --topo-order --pretty=\"format: %Cgreen%h%Creset %s%Cred%d%Creset%n\"
    lm = log --color=always --pretty=format:\"%Cgreen%h%Creset - %Cred%an%Creset, %ar: %C(yellow)%s%Creset\" --stat
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    i = remote --verbose
    sl = stash list
    sr = svn rebase
    su = submodule update --init
    sp = submodule foreach git pull origin master
    who = shortlog -s --
    what = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    me = log --stat --author="vakarev"
    rank = !git log --pretty=format:'%aN <%aE>' | sort | uniq -c | sort -rn
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
