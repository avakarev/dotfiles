# --date = (relative|local|default|iso|rfc|short|raw) 

[user]
    name = USERNAME
    email = EMAIL
[github]
    user = LOGIN
[core]
    editor = vim
    excludesfile = ~/.gitignore-global
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[color "diff"]
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[color "branch"]
    current = blue reverse
    local = green
    remote = yellow
[alias]
    st = status -sbu
    stat = status
    ci = commit
    uc = reset HEAD^ # undo last local commit
    br = branch
    bl = branch -av
    tl = tag -l
    ls = ls-files
    co = checkout
    df = diff
    dfs = diff --stat -r
    dfn = diff --name-status -r
    lg = log -p
    lga = log --graph --decorate --pretty=oneline --abbrev-commit
    i = remote -v
    su = submodule update --init
    sp = submodule foreach git pull origin master
    who = shortlog -s --
    what = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
