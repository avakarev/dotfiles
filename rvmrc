# This is where rvm installs and manages everything in by default.
export rvm_path="$HOME/.rvm"
# Disable the project specific .rvmrc file functionality
export rvm_project_rvmrc=0
# These options are passed to the 'gem' command in a RVM environment.
export rvm_gem_options="--no-rdoc --no-ri"
# Persistent ignoring of gemsets
export rvm_ignore_gemsets_flag=1
# Do not create a gemset when the gemset is used if it does not exist
export rvm_gemset_create_on_use_flag=0
