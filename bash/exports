export LC_CTYPE=en_US.UTF-8
export LANG=en_US.UTF-8

export EDITOR='vim'
export SVN_EDITOR='vim'
export GREP_OPTIONS='--color=auto'
export NODE_PATH=/usr/local/lib/node_modules

PATH=/usr/local/bin:/usr/local/sbin:$PATH:$HOME/.bash/scripts
export PATH

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

export RBXOPT=-X19      # Run Rubinius in 1.9 mode
export JRUBY_OPTS=--1.9 # Run jRuby in 1.9 mode

if [ -d $HOME/.rvm ]; then
  # Disable the project .rvmrc file functionality
  export rvm_project_rvmrc=0
  # Add RVM to PATH for scripting
  export PATH=$PATH:$HOME/.rvm/bin
  # Load RVM into a shell session *as a function*
  [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
elif [ -d $HOME/.rbenv ]; then
  # This enables rbenv
  export RBENV_VERSION="1.9.3p194"
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi
