export LC_CTYPE=en_US.UTF-8
export LANG=en_US.UTF-8

export EDITOR='vim'
export SVN_EDITOR='vim'
export GREP_OPTIONS='--color=auto'

PATH=/usr/local/bin:/usr/local/sbin:$PATH:$HOME/.bash/scripts
export PATH

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Get rid of Vagrant complains about "running outside of the official installers"
export VAGRANT_INSTALLER_ENV=1

# Disable Rails' Spring
export DISABLE_SPRING=1

export GOPATH=$HOME/.go
export PATH=$PATH:$GOPATH/bin

if [[ -f /usr/local/share/chruby/chruby.sh ]]; then
  source /usr/local/share/chruby/chruby.sh
  # source /usr/local/share/chruby/auto.sh
  [[ -s "$HOME/.ruby-version" ]] && chruby $(cat ~/.ruby-version)
elif [[ -f /usr/local/opt/chruby/share/chruby/chruby.sh ]]; then
  source /usr/local/opt/chruby/share/chruby/chruby.sh
  # source /usr/local/opt/chruby/share/chruby/auto.sh
  [[ -s "$HOME/.ruby-version" ]] && chruby $(cat ~/.ruby-version)
elif [ -d $HOME/.rvm ]; then
  # Load RVM into a shell session *as a function*
  [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
fi

if [ -d $HOME/.nvm ]; then
    export NVM_DIR="$HOME/.nvm"
    if [[ -s "$NVM_DIR/nvm.sh" ]]; then
        source "$NVM_DIR/nvm.sh"
    else
        source "$(brew --prefix nvm)/nvm.sh"
    fi
fi
