export LC_CTYPE=en_US.UTF-8
export LANG=en_US.UTF-8

export EDITOR='vim'
export SVN_EDITOR='vim'
export GREP_OPTIONS='--color=auto'
export NODE_PATH=/usr/local/lib/node_modules

PATH=/usr/local/bin:/usr/local/sbin:$PATH:$HOME/.bash/scripts
export PATH

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Get rid of Vagrant complains about "running outside of the official installers"
export VAGRANT_INSTALLER_ENV=1
export RBXOPT=-X19                    # Run Rubinius in 1.9 mode
export JRUBY_OPTS=--2.0               # Run jRuby in 2.0 mode
export JRUBY_OPTS=-Xcext.enabled=true # Enable C extension support

if [ -d $HOME/.nvm ]; then
    source ~/.nvm/nvm.sh
fi

if [ -d $HOME/.rvm ]; then
  # Load RVM into a shell session *as a function*
  [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
elif [ -d $HOME/.rbenv ]; then
  # This enables rbenv
  export RBENV_VERSION="2.0.0-p247"
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi
